{
    "expo": {
        "name": "MeetMe Game",
        "slug": "meetme-game",
        "version": "1.0.0",
        "orientation": "portrait",
        "userInterfaceStyle": "light",
        "splash": {
            "backgroundColor": "#c12ec4",
            "resizeMode": "contain"
        },
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.meetmegame.app",
            "config": {
                "usesNonExemptEncryption": false
            },
            "infoPlist": {
                "NSLocationWhenInUseUsageDescription": "Cette application utilise votre localisation pour afficher les bars à proximité.",
                "NSLocationAlwaysUsageDescription": "Cette application utilise votre localisation pour vous proposer les meilleurs bars.",
                "NSCameraUsageDescription": "Cette application utilise votre caméra pour scanner les QR codes des bars."
            }
        },
        "android": {
            "package": "com.meetmegame.app",
            "permissions": [
                "ACCESS_FINE_LOCATION",
                "ACCESS_COARSE_LOCATION",
                "CAMERA"
            ]
        },
        "web": {
            "bundler": "metro"
        },
        "plugins": [
            [
                "expo-location",
                {
                    "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location."
                }
            ]
        ]
    }
}